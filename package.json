{
  "name": "textile-js",
  "version": "1.0.0",
  "description": "Some JS code to demo Textile stuff",
  "main": "index.js",
  "author": "Carson Farmer <carson@textile.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/{js/*}",
    "serve": "browser-sync start --no-ghost-mode --server --files \"dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:js": "browserify src/js/index.js -o dist/js/index.min.js -g uglifyify",
    "build": "run-s build:*",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "@babel/preset-env"
            ]
          ]
        }
      ],
      [
        "envify"
      ]
    ]
  },
  "dependencies": {
    "async": "^2.6.2",
    "toposort": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "autoprefixer": "^9.4.8",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "envify": "^4.1.0",
    "eslint": "^5.14.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "scss": "^0.2.4",
    "stylelint": "^9.10.1",
    "uglifyify": "^5.0.1",
    "watchify": "^3.11.1"
  }
}
